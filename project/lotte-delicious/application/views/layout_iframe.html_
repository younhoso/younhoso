		<script>
		AOS.init({ easing: 'ease-in-out-sine', duration:800, once : true });
		
		function toggle_menu(){
			$('#gnb').toggleClass('on');
		}
		function toggle_fsite() {
			$('.family_site ul').toggleClass('on');
		}
		function show_href(h) {
			$(event.currentTarget).addClass('on');
			setTimeout(function(){
				$('#gnb').removeClass('on');
				$('#gnb ul li a').removeClass('on');
				location.href = h
			}, 800);
		}
		$(document).ready(function(){
			$('#gnb > ul > li > a').hover(function(){
				if( $(window).width() >= 1200 ) {
					$(this).addClass('on');
				}	
			},function(){
				if( $(window).width() >= 1200 ) {
					$(this).removeClass('on');
				}	
			});
			
		});
		</script>
